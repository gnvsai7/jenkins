pipeline {
    agent any
    environment {
        DOCKERHUB_CREDENTIALS=credentials('dockerHub')
    }

    stages { 
        stage('SCM Checkout') {
            steps {
                git 'https://github.com/gnvsai7/jenkins.git'
            }
        }

        stage('Docker Build') {
            steps {
                sh 'sudo docker login -u $DOCKERHUB_CREDENTIALS_USR -p $DOCKERHUB_CREDENTIALS_PSW'
                sh 'sudo docker build -t $DOCKERHUB_CREDENTIALS_USR/react-jenkins:latest .'
            }
        }

        stage('Docker push') {
            steps {
                sh 'sudo docker push $DOCKERHUB_CREDENTIALS_USR/react-jenkins:latest'
            }
        }

        stage ('Deploy Ec2') {
            steps {
                sshagent (credentials: ['ec2']) {
                sh "ssh -o StrictHostKeyChecking=no ubuntu@ec2-18-220-174-254.us-east-2.compute.amazonaws.com ; sudo docker pull $DOCKERHUB_CREDENTIALS_USR/react-jenkins:latest; sudo docker run -d --name react -p 3000:3000 $DOCKERHUB_CREDENTIALS_USR/react-jenkins:latest"
            
                } 
            }   
        }
    }
}